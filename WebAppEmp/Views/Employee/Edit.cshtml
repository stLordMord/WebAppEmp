@model WebAppEmp.Models.EmployeeModel

@{
    ViewBag.Title = "Ввод работника";
}

<h2>Изменение</h2>

@using (Html.BeginForm())
{    
<div class="form-horizontal">
    @Html.HiddenFor(model => model.EmployeeId)

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Surname</b></div>
        <div class="col-md-10">
            <input name="Surname" value="@Model.Surname" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Name</b></div>
        <div class="col-md-10">
            <input name="Name" value="@Model.Name" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Patronymic</b></div>
        <div class="col-md-10">
            <input name="Patronymic" value="@Model.Patronymic" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Дата приема</b></div>
        <div class="col-md-10">
            <input type="datetime" name="@Model.StartDate" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Должность</b></div>
        <div class="col-md-10">
            <select name="Post" autofocus="@Model.Post">
                <option disabled>Выберите должность</option>
                <option value="Разработчик ">Разработчик </option>
                <option value="Тестировщик ">Тестировщик </option>
                <option value="Бизнес-аналитик">Бизнес-аналитик </option>
                <option value="Менеджер">Менеджер</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Компания</b></div>
        <div class="col-md-10">
            <input type="text" name="CompanyId" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Отмена", "Index")
</div>
