@model WebAppEmp.Models.EmployeeModel

@{
    ViewBag.Title = "Ввод работника";
}

<h2>Изменение</h2> <hr />

@using (Html.BeginForm())
{    
<div class="form-horizontal">
    @Html.HiddenFor(model => model.EmployeeId)

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Фамилия</b></div>
        <div class="col-md-10">
            <input type="text" name="Surname" value="@Model.Surname" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Имя</b></div>
        <div class="col-md-10">
            <input type="text" name="Name" value="@Model.Name" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Отчество</b></div>
        <div class="col-md-10">
            <input type="text" name="Patronymic" value="@Model.Patronymic" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Дата приема</b></div>
        <div class="col-md-10">
            <input type="date" name="StartDate" autocomplete="on" value="@Model.StartDate" min="2000-01-01"/>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Должность</b></div>
        <div class="col-md-10">
            <select name="Post">
                <option disabled>Выберите должность</option>
                <option value="Разработчик ">Разработчик </option>
                <option value="Тестировщик ">Тестировщик </option>
                <option value="Бизнес-аналитик">Бизнес-аналитик </option>
                <option value="Менеджер">Менеджер</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Компания</b></div>
        <div class="col-md-10">
            <select name="CompanyName" >
                @foreach (string company in ViewBag.Companies)
                {
                    <option>@company</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div class="btn-link">
    @Html.ActionLink("Отмена", "Index")
</div>
