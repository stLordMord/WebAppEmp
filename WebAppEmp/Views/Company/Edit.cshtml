@model WebAppEmp.Models.CompanyModel

@{
    ViewBag.Title = "Ввод компании";
}

<h2>Изменение</h2> <hr />

@using (Html.BeginForm())
{
<div class="form-horizontal">
    @Html.HiddenFor(model => model.CompanyId)
    
    <div class="form-group">
        <div class="control-label col-md-2"> <b>Наименование</b></div>
        <div class="col-md-10">
            <input name="CompanyName" value="@Model.CompanyName" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Размер компании</b></div>
        <div class="col-md-10">
            <input name="Size" value="@Model.Size" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>ОПФ</b></div>
        <div class="col-md-10">
            <select name="Form" autofocus="@Model.Form">
                <option disabled>Выберите ОПФ</option>
                <option value="Индивидуальный предприниматель">ИП</option>
                <option value="Общество с ограниченной ответственностью">ООО</option>
                <option value="Общество с дополнительной ответственностью">ОДО</option>
                <option value="Открытое акционерное общество">ОАО</option>
                <option value="Закрытое акционерное общество">ЗАО</option>
                <option value="Производственный кооператив">ПК</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Отмена", "Index")
</div>
