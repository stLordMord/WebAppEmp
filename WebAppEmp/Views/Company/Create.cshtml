@model WebAppEmp.Models.CompanyModel
@{
    ViewBag.Title = "Create";
}

<h2>Ввод компании</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">

    <div class="form-group">
        <div class = "control-label col-md-2" > <b>Название</b></div>
        <div class="col-md-10">
            <input type="number" name="Name" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"> <b>Размер</b></div>
        <div class="col-md-10">
